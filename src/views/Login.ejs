<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="/css/styleLogin.css" rel="stylesheet" type="text/css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <title>Login</title>
</head>
<body>
  <div class="partetrasera">

    <div class="verde">
      <div class="ex_cesar">
        <h3>dccds</h3>
        <center><button onclick="Registrarse()"> Registrarse </button></center>
      </div>
      <div class="ex_columnar">
        <h3>dccds</h3>
        <center><button onclick="IniSesion()"> Iniciar sesión </button></center>
      </div>
    </div>
    <div class="arriba">
      <div class="cesar">
        <H2> Ingrese con su cuenta </H2>
        </section>
        <section class="form-register">
          <h4>usuario</h4>
          <center><textarea class="controls" id="texto"placeholder="Ingrese su usuario"></textarea></center>
          <h4>contraseña</h4>
          <center><textarea class="controls" id="texto"placeholder="Ingrese su contraseña"></textarea></center>
          <center><button class="botons" onclick="Exportar();">Guardar</button></center>
        </section>
      </div>
      <div class="columnar">
        <h2>Registre una nueva cuenta</h2>
        <section class="form-register">
          <h4>nombre</h4>
          <center><textarea class="controls" id="texto"placeholder="Ingrese su nombre"></textarea></center>
          <h4>apellido</h4>
          <center><textarea class="controls" id="texto"placeholder="Ingrese su apellido"></textarea></center>
          <h4>usuario</h4>
          <center><textarea class="controls" id="texto"placeholder="Ingrese su usuario"></textarea></center>
          <h4>contraseña</h4>
          <center><textarea class="controls" id="texto"placeholder="Ingrese su contraseña"></textarea></center>
          <center><button class="botons" onclick="Exportar();">Guardar</button></center>
        </section>
      </div>
    </div>
  </div>  
</body>

<script>
 
 const ao = document.querySelector(".cesar")
 const by = document.querySelector(".columnar");
 const cn = document.querySelector(".arriba");
 const dw = document.querySelector(".ex_cesar")
 const sg = document.querySelector(".ex_columnar")
 
 function IniSesion(){
  ao.style.display = "block"
  cn.style.left = "500px"
  by.style.display = "none"
  sg.style.opacity = "0"
  dw.style.opacity = "1"
 }
 
 function Registrarse(){
  ao.style.display = "none"
  cn.style.left = "60px"
  by.style.display = "block"
  sg.style.opacity = "1"
  dw.style.opacity = "0"
 }
</script>
