<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="/css/styleLogin.css" rel="stylesheet" type="text/css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <title>Login</title>
</head>
<body>
  <main>
    <div class="todo">
      <div class="parteTrasera">
        <div class="registro">
          <h3>¿Ya tienes una cuenta?</h3>
          <p>Inicia sesión para hacer un pedido</p>
          <button id="btn_iniSe" onclick="Registrarse()">Iniciar sesión</button>
        </div>
        <div class="iniciaSesion">
          <h3>¿Aún no tienes una cuenta?</h3>
          <p>Registrate para hacer un pedido</p>
          <button id="btn_iniSe" onclick="IniSesion()">Registrarse</button>
        </div>
      </div>
      <div class="arriba">
        <div class="iniSes">
          <form action="/Login" method="post" class="login">
            <h2>Iniciar sesión</h2>
            <label for="userIngre">Usuario</label>
            <input type="text" id="userIngre" placeholder="Usuario">
            <label for="contraIngre">Contraseña</label>
            <input type="password" id="contraIngre" placeholder="Contraseña">
            <button type="button" class="d-flex justify-content-center">Iniciar</button>
          </form>
        </div>
        <div class="regis">
          <form action="/Login" method="post" class="registro">
            <h2>Registrarse</h2>
            <label for="nombreRegis">Nombre</label>
            <input type="text" id="nombreRegis" placeholder="Nombre">
            <label for="apellidoRegis">Apellido</label>
            <input type="text" id="apellidoRegis" placeholder="Apellido">
            <label for="correoRegis">Correo</label>
            <input type="text" id="correoRegis" placeholder="Correo electrónico">
            <label for="userRegis">Usuario</label>
            <input type="text" id="userRegis" placeholder="Usuario">
            <label for="contraRegis">Contraseña</label>
            <input type="password" id="contraRegis" placeholder="Contraseña">
            <button type="button" class="d-flex justify-content-center">Crear cuenta</button>
          </form>
        </div>
      </div>
    </div>  
  </main>
</body>

<script>
 
 const ao = document.querySelector(".iniSes")
 const by = document.querySelector(".regis");
 const cn = document.querySelector(".arriba");
 const dw = document.querySelector(".registro")
 const sg = document.querySelector(".iniciaSesionr")
 
 function IniSesion(){
  ao.style.display = "block"
  cn.style.left = "410px"
  by.style.display = "none"
  sg.style.opacity = "0"
  dw.style.opacity = "1"
 }
 
 function Registrarse(){
  ao.style.display = "none"
  cn.style.left = "10px"
  by.style.display = "block"
  sg.style.opacity = "1"
  dw.style.opacity = "0"
 }
</script>
